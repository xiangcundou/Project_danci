<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cycycd.admin.project_danci.MainActivity"
    android:orientation="horizontal">
    <com.cycycd.admin.project_danci.XscrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--搜索层-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
      android:layout_height="wrap_content">
        <EditText
            android:id="@+id/search_area"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:textSize="30dp"
            android:hint="请输入查询的单词"
            android:textColorHint="#c5c5c5"
            android:background="@null"/>
        <android.support.v7.widget.CardView
            android:id="@+id/search_bt"
            android:layout_gravity="center"
            app:cardBackgroundColor="#12aee6"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardCornerRadius="3dp"
            android:layout_height="40dp"
            android:clickable="true"
            app:cardElevation="1dp"
            android:foreground="?attr/selectableItemBackground">
            <TextView
                android:text="查询"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.v7.widget.CardView>
        <!--搜索层结束-->
    <android.support.v7.widget.CardView
        android:id="@+id/rescard"
        android:visibility="invisible"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        >
        <ImageView
            android:id="@+id/collect"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/en_text"
                android:text="EN"
                android:textSize="35dp"
                android:textColor="#494949"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cn_text"
                android:text="CN"
                android:textSize="18dp"
                android:textColor="#c4c4c4"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="音标:"
                android:textSize="20dp"
                android:textColor="#494949"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/yb_text"
                android:layout_marginLeft="2dp"
                android:text="YB"
                android:textSize="20dp"
                android:textColor="#494949"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            </LinearLayout>
            <View
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="5dp"
                    android:text="释义:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ex_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="EXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </com.cycycd.admin.project_danci.XscrollView>
    <View
        android:background="#dfdfdf"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:text="收藏"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#dfdfdf"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/wordlist"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
